{
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  "secrets": {
    "AGENT_TOKEN": {}
  },
  
  "postCreateCommand": "npm --prefix .codespace-agent install",
  "postStartCommand": "npm --prefix .codespace-agent start",

  "forwardPorts": [3001],

  "portsAttributes": {
    "3001": {
      "label": "Codespace Agent API",
      "visibility": "public",
      "onAutoForward": "openBrowser"
    }
  }
}
